{
  "name": "@thor-commerce/backendFlashCards",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/backendFlashCards",
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@thor-commerce/backendFlashCards:build",
          "runBuildTargetDependencies": false,
          "inspect": true,
          "host": "localhost"
        },
        "configurations": {
          "development": {
            "buildTarget": "@thor-commerce/backendFlashCards:build:development"
          },
          "production": {
            "buildTarget": "@thor-commerce/backendFlashCards:build:production"
          }
        }
      },
      "build:sam": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/backendFlashCards",
          "command": "cd dist && yarn"
        },
        "dependsOn": [
          "build"
        ]
      },
      "serve:lambda": {
        "continuous": true,
        "executor": "nx:run-commands",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build:sam"
        ],
        "options": {
           "cwd": "packages/backendFlashCards",
          "command": "sam local start-api -t template.yaml --port 4004 --skip-pull-image"
        }
      },
      "deploy:lambda": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "build"
        ],
        "options": {
          "cwd": "packages/backendFlashCards",
          "commands": [
            "cd dist && yarn && zip -r ../flashcards-api.zip ."
          ]
        }
      },
      "db:migrate": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/backendFlashCards",
          "command": "npx sequelize-cli db:migrate"
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity": "^3.840.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.840.0",
    "@codegenie/serverless-express": "^4.16.0",
    "@nestjs-cognito/auth": "^2.2.0",
    "@nestjs-cognito/core": "^2.2.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.3",
    "aws-lambda": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@nestjs/sequelize": "^11.0.0",
    "@types/aws-lambda": "^8.10.150",
    "@types/sequelize": "^4.28.20",
    "run-script-webpack-plugin": "^0.2.3",
    "sequelize-cli": "^6.6.3",
    "webpack-node-externals": "^3.0.0"
  }
}
